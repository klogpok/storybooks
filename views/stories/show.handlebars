<div class="row">
  <div class="col s12 m9">
    <div class="card story">
      <div class="card-content">
        <h5>
          {{story.title}}
          <small>{{{editIcon story.user.id user.id story.id false}}}</small>
        </h5>
        <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
        {{{story.body}}}
      </div>
    </div>
    {{#if story.allowComments}} {{#each story.comments}}
    <div class="card">
      <div class="card-content">
        <h5>{{commentBody}}</h5>
        <div class="chip">
          <img src="{{commentUser.image}}" alt=""> {{commentUser.displayName}}
        </div>
        <br>
        <small>Posted: {{formatDate commentDate 'MMMM Do YYYY HH:mm'}}</small>
      </div>
    </div>
    {{/each}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">Comments</span>
        {{#if user}}
        <form action="/stories/comment/{{story.id}}" method="POST">
          <div class="input-field">
            <textarea name="commentBody" class="materialize-textarea"></textarea>
            <label for="commentBody">Add comment</label>
          </div>
          <input type="submit" value="Submit" class="btn">
        </form>
        {{else}}
        <p>Please,
          <a href="/auth/google">log in</a> to leave comments</p>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>
  <div class="col s12 m3">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.displayName}}</span>
        <img src="{{story.user.image}}" alt="" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>