<h3>Stories</h3>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{#if user}} {{{editIcon user.id ../user.id id}}} {{/if}}
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">{{{stripTags (trancate body 150)}}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="{{user.image}}">
          <a href="/stories/user/{{user.id}}">{{user.displayName}}</a>
        </div>
        <br>
        <small>Posted: {{formatDate date 'MMMM Do YYYY HH:mm'}}</small>
      </div>
      <div class="card-action center-align">
        <a href="/stories/show/{{id}}" class="btn grey">
          Read More</a>
      </div>
    </div>
  </div>

  {{else}}
  <p>No stories found</p>
  {{/each}}
</div>