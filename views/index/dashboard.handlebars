{{!--
<h1>Welcome {{user.firstName}}</h1> --}}
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td>
        <a href="stories/show/{{id}}">{{title}}</a>
      </td>
      <td>{{formatDate story.date 'MMMM Do YYYY'}}</td>
      <td>
        <span class="dash-status">{{status}}</span>
      </td>
      <td class="center">
        <a href="stories/edit/{{id}}" class="btn-small right-align">
          <i class="fa fa-edit"></i> Edit</a>
        <form action="/stories/delete/{{id}}?_method=DELETE" method="POST" id="delete-form">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" href="stories/delete/{{id}}" class="btn-small right-align red">
            <i class="fa fa-trash-alt"></i> Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have no created any story yet</p>
{{/if}}